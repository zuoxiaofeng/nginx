{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "inputs": [
    ],
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "./auto/configure",
            "args": [
                "--builddir=${workspaceFolder}/build", 
                "--prefix=${workspaceFolder}/out",
                "--with-http_v2_module",
                "--with-http_ssl_module"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "-f",
                "./build/Makefile",
                "-j8"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "install",
            "type": "shell",
            "command": "make",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}