{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "inputs": [
        {
            "description": "Build Jobs",
            "id": "jobs",
            "type": "pickString",
            "default": "8",
            "options": [
                "1",
                "2",
                "4",
                "8"
            ]
        }
    ],
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "./auto/configure",
            "args": [
                "--builddir=${workspaceFolder}/builddir",
                "--prefix=${workspaceFolder}/out",
                "--with-http_v2_module",
                "--with-http_ssl_module"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j${input:jobs}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "install",
            "type": "shell",
            "command": "make",
            "args": [
                "-j${input:jobs}",
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}